{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-component-in-tag": true,
  "packages": {
    "security": {
      "release-type": "simple",
      "package-name": "security",
      "extra-files": [
        {
          "type": "xml",
          "path": "security/pom.xml",
          "xpath": "//*[local-name()='version']"
        }
      ]
    },
    "services": {
      "release-type": "simple",
      "package-name": "services",
      "extra-files": [
        {
          "type": "xml",
          "path": "services/pom.xml",
          "xpath": "//*[local-name()='project']/*[local-name()='version']"
        },
        {
          "type": "xml",
          "path": "services/service1/pom.xml",
          "xpath": "//*[local-name()='parent']/*[local-name()='version']"
        },
        {
          "type": "xml",
          "path": "services/service2/pom.xml",
          "xpath": "//*[local-name()='parent']/*[local-name()='version']"
        }
      ]
    }
  }
}
